doctype html
html(lang="en" class="js")
	head
		title= "Yamaha - csv2json"
		//- JQuery
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")

		//- Tether (for material)
		script(src="//cdnjs.cloudflare.com/ajax/libs/tether/1.3.1/js/tether.min.js")

		//- Material Design fonts
		link(rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700")
		link(rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons")

		//- Bootstrap
		link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")

		//- Bootstrap Material Design
		link(rel="stylesheet" href="/material/css/bootstrap-material-design.css")
		link(rel="stylesheet" href="/material/css/ripples.css")

		//- Bootstrap Material JS
		script(type="text/javascript", src="/material/js/material.js")
		script(type="text/javascript", src="/material/js/ripples.js")

		//- Custom file input: http://tympanus.net/codrops/?p=24831
		link(rel="stylesheet" href="/css/customfileinput.css")
	body
		div(class="container" style="margin-top: 3%;")
			div(class="jumbotron" style="overflow: hidden;")
				h1(style="text-align: center; margin-bottom: 2%") Yamaha - csv2json

				div(class="col-xs-12 col-sm-8 col-sm-offset-2")
					form(name="uploader", action="/parse", method="post", enctype="multipart/form-data")

						div(class="col-xs-12")
							input#file-1(type="file", name="fileloader", class="inputfile inputfile-1")

							label(for="file-1" class="col-md-12 btn btn-warning btn-block" style="font-size: 17px; letter-spacing: 1px;")
								svg(xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17" style="margin-right: 5%; fill: #ff5722;")
									path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z")
								span URL file

						div(class="col-xs-12")
							input#upload-btn(type="submit" value="Run" class="col-md-12 btn btn-warning btn-block" style="font-size: 17px; letter-spacing: 1px;")


				div#results-div(class="col-xs-12 col-sm-8 col-sm-offset-2" style="display: block")
					hr

					h2(class="col-xs-4" style="margin-bottom: 2%") Results

					div(class="col-xs-12")
						p #{output}
					
					

		script(src="/js/materialInit.js")
		script(src="/js/custom-file-input.js")

		script(src='/socket.io/socket.io.js')
		script(src="/js/socket.js")